/* Navigation Division
------------------------------------*/
.navbar ul{
	font-family: 'EB Garamond', serif;
	list-style: none;
	background: #546B60;
	position: float;
	padding: 5px;
	text-align: center;
	font-size: 20px;
	font-weight: bold;
	text-shadow: 1px -1px 0 #343434;	
}
.navbar li{
	display: inline-block;
	
}
.navbar a{
	text-decoration: none;
	color: #F7FFF7;
	width: 120px;
	display: block;
	padding: 20px;	
	text-align: center;
	
}
.navbar a:hover{
	background: #468499;
}
/* Heading Division
------------------------------------*/
body {
	background: #546B60;
	background: -moz-linear-gradient(top, #546B60 0%, #F7FFF7 72%, #343434 100%);
	background: -webkit-linear-gradient(top, #546B60 0%, #F7FFF7 72%, #343434 100%);
	background: linear-gradient(to bottom, #546B60 0%, #F7FFF7 72%, #343434 100%);
	background-repeat: no-repeat;
	background-size: cover;
}
h1 {
	font-family: 'EB Garamond', serif;
	color: #343434;
	text-align: Center;
	text-shadow: 2px -2px 0 #F7FFF7;
	font-size: 100px;
}

h2 {
	font-family: 'EB Garamond', serif;
	display: block;
    font-size: 25px;
    font-style: bold;
	color: #345511;	
}

	* {
  box-sizing: border-box;
  
}

/* Position the image container (needed to position the left and right arrows) */
.container {
  position: relative;
  
}

/* Hide the images by default */
.mySlides {
  display: none;
}

/* Add a pointer when hovering over the thumbnail images */
.cursor {
  cursor: pointer;
}

/* Next & previous buttons */
.prev,
.next {
  cursor: pointer;
  position: absolute;
  top: 40%;
  width: auto;
  padding: 16px;
  margin-top: -50px;
  color: white;
  font-weight: bold;
  font-size: 20px;
  border-radius: 0 3px 3px 0;
  user-select: none;
  -webkit-user-select: none;
}

/* Position the "next button" to the right */
.next {
  right: 0;
  border-radius: 3px 0 0 3px;
}

/* On hover, add a black background color with a little bit see-through */
.prev:hover,
.next:hover {
  background-color: rgba(0, 0, 0, 0.8);
}

/* Number text (1/3 etc) */
.numbertext {
  color: #f2f2f2;
  font-size: 12px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

/* Container for image text */
.caption-container {
  text-align: center;
  background-color: #222;
  padding: 2px 16px;
  color: white;
  font-family: 'EB Garamond', serif;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}

/* Six columns side by side */
.column {
  float: left;
  width: 16.66%;
}

/* Add a transparency effect for thumnbail images */
.demo {
  opacity: 0.6;
}

.active,
.demo:hover {
  opacity: 1;
}


/* Footer Division
------------------------------------*/
*  {
	padding: 0;
	margin: 0;
	box-sizing: border-box;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 20px;
}
.footer-container {
	background-color: #546B60;
	padding-bottom: 4rem;
}
.footer {
	width: 75%;
	height: 25vh;
	background-color: #546B60;
	color: #F7FFF7;
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
	margin: 0 auto;
	padding-bottom: 9rem;
	padding-left: 0px;
	padding-top: 100px;
	margin-right: 0px;
}
.footer-heading {
	display: flex;
	flex-direction: column;
	margin-right: 4rem;	
}
.footer-heading h2 {
	margin-bottom: 2rem;
}
.footer-heading a {
	color: #F7FFF7;
	text-decoration: none;
	margin-bottom: 0.5rem;
}
.footer-heading a:hover{
	color: #468499;
	transition: 0.3 ease-out;
}
li {
	list-style: none;
}
h6 {
	color: #343434;
}
